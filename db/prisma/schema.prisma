model chats {
  id        String     @id @default(cuid())
  pdfName   String
  pdfurl    String
  createdAt DateTime   @default(now())
  messages  messages[]
  userId   String
  namespace String?
}

model messages {
  messageid String @id @default(cuid())
  chatid    String
  chat      chats  @relation(fields: [chatid], references: [id])
  content   String
  createdAt DateTime @default(now())
  role role
  

}

enum role {
  user
  assistant
}
